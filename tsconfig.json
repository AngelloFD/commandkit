{
    "compilerOptions": {
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES2022",
        "moduleResolution": "Node",
        "module": "NodeNext",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": ["src/**/*.ts"]
}
